@model IEnumerable<Revoluza.Models.Employee>
@{
    var count = 1;
}
<table class="table table-bordered table-striped" style="width: 75%;">
    <thead>
        <tr>
            <th colspan="2" style="text-align: center"><div class="input-group"><input type="text" id="filterValue" class="form-control" style="width:125px;" placeholder="Search for..."><span class="input-group-btn"><button class="btn btn-default btnSearch" id="btnSearch" type="button">Go!</button></div></th>
            <th colspan="4" style="text-align: center">Employee List<span class="btn btn-xs btn-success btnCreate" id="btnCreate" style="float:right;">Create New</span></th>
        </tr>
        <tr class="success">
            <th>SNo.</th>
            <th>Employee Name</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@emp.Fullname</td>
                <td>@emp.Gender</td>
                <td>@emp.Department</td>
                <td>@emp.Designation</td>
                <td>
                    <span class="btn btn-xs btn-primary btnEdit" id="edit_@emp.EmpId">Edit</span>
                    <span class="btn btn-xs btn-info btnDetails" id="delails_@emp.EmpId">Details</span>
                    <span class="btn btn-xs btn-danger btnDelete" id="delete_@emp.EmpId">Delete</span>
                </td>
            </tr>
        }
    </tbody>
</table>

