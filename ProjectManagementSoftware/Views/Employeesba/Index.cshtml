@model IEnumerable<Core.Domain.Employee>

@{
    ViewData["Title"] = "Index";
}

@*<h2>Employees List Page</h2>*@

@*@Html.Partial("PostMenu")*@

<p>
    @Html.ActionLink("Add New Employee", "Create", null, new { @class = "btn btn-success" })
</p>

@*@Html.DisplayForModel()*@

<script type="text/javascript">
    function showDetailPopup(id) {
        var url = '@Url.Action("Detail")' + '/' + id;
        window.open(url, "detailWindow", 'width=600px,height=400px');
    }
</script> 
 
<h2 style="text-align: center;">Employees List Page</h2>
 
<table cellpadding="5px" class="table table-striped table-bordered">
    <tr class="success">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Department</th>
        <th>Designation</th>
        <th>Date of Birth</th>
        <th>Date of Joining</th>
        <th>Salary</th>
        <th>Date Added</th>
        <th>Added By</th>
        <th>Reporting To</th>
        <th>Action</th>
    </tr>
@{int i = 0;}
@foreach (var item in Model) {
    <tr style='font-size: 9pt; @(i++%2==0 ? "background-color: #bbbbbb" : "")'> 
        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
        <td>@Html.DisplayFor(modelItem => item.Department)</td>
        <td>@Html.DisplayFor(modelItem => item.Designation)</td>
        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
        <td>@Html.DisplayFor(modelItem => item.JoinDate)</td>
        <td>@Html.DisplayFor(modelItem => item.Salary)</td>
        <td>@Html.DisplayFor(modelItem => item.DateAdded)</td>
        <td>@Html.DisplayFor(modelItem => item.AddedBy)</td>
        <td>@Html.DisplayFor(modelItem => item.ReportingTo)</td>
        <td>
            <a href="#" class="btn btn-default" onclick="showDetailPopup('@item.EmpId');">Details</a> |
            @Html.ActionLink("Edit", "Update", new { id = item.EmpId}, 
                new{@class = "btn btn-info" } ) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EmpId },
                new { @class = "btn btn-warning", onclick = "return confirm('Are you sure to delete this Employee?');" })
        </td>
    </tr>
}
</table>